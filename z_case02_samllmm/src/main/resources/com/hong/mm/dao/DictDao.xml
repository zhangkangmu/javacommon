<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hong.mm.dao.DictDao">
    <select id="addQuestionQueryDict" resultMap="QueryDict">
        select id,data_value from t_dict where pid is null
    </select>
    <!--这里等下试试,可以不区分大小写吗  区分大小写-->
    <resultMap id="QueryDict" type="Dict">
        <id column="id" property="id"></id>
        <result column="data_value" property="dataValue"></result>
        <collection property="subList" ofType="Dict" select="queryCity" column="id"/>
    </resultMap>
<!--这里也可以直接使用前面的resultMap,功能正常,但是不知道会不会有什么弊端-->
    <select id="queryCity" resultType="dict" parameterType="int">
select id,data_value dataValue from t_dict  where pid =#{cityID}
    </select>
</mapper>