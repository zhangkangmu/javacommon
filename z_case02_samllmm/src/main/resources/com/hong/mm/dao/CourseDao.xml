<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hong.mm.dao.CourseDao">

    <select id="getAllCount" parameterType="QueryPageBean" resultType="_long">
        select count(*) from t_course
        <include refid="searchCourse"/>
    </select>
    <select id="getPageList" resultType="course" parameterType="QueryPageBean">
        SELECT c.id,c.NAME,
        (SELECT username FROM t_user WHERE id=c.user_id) creator ,
        c.create_date createDate,
        c.is_show isShow,
        (SELECT COUNT(*) FROM t_catalog WHERE course_id=c.id) catalogQty,
        (SELECT COUNT(*) FROM t_tag WHERE course_id=c.id) tagQty,
        (SELECT COUNT(*) FROM t_question WHERE course_id=c.id) questionQty
        FROM t_course c
        <include refid="searchCourse"/>
        order by create_date desc
        LIMIT #{offset},#{pageSize}
    </select>

    <insert id="addCourse" parameterType="course">
        INSERT INTO t_course (NAME,create_date,is_show,user_id)
        VALUES
        (#{name}, #{createDate},#{isShow},#{userId});
    </insert>


    <!--查询科目的时候可以不带的参数,因为有很多功能都要用到,比如说搜索,第一次进入
    注意:mybatis中,status的值为0的时候,0==''为true,也就是默认0是空字符串,
    所有传的数据要统一,不能一下子是string,一下子是int,
    要把前端的默认改成null,而不是''空字符串
    而且 and queryParams.status!=''不能要
    -->
    <sql id="searchCourse">
        <where>
            <if test="queryParams!=null">
                <if test="queryParams.name!='' and queryParams.name!=null">
                    and name like "%"#{queryParams.name}"%"
                </if>

                <if test="queryParams.status!=null">
                    AND is_show=#{queryParams.status}
                </if>
            </if>
        </where>
    </sql>
</mapper>